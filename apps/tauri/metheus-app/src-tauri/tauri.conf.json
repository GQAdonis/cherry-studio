{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "metheus-app",
  "version": "0.1.0",
  "identifier": "ai.prometheusags.metheus",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "metheus-app",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "window": {
      "startDragging": true,
      "maximize": true,
      "unmaximize": true,
      "minimize": true,
      "close": true,
      "show": true,
      "hide": true,
      "setSize": true,
      "setPosition": true,
      "setFullscreen": true,
      "setFocus": true,
      "setTitle": true,
      "center": true
    }
  }
}
