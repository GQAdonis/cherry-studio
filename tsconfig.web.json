{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/**/*",
    "src/renderer/src/types/vite-env.d.ts",
    "src/renderer/src/types/json-imports.d.ts",
    "src/renderer/src/types/jest.d.ts",
    "src/renderer/src/i18n/locales/*.json",
    "src/renderer/src/i18n/translate/*.json",
    "src/preload/*.d.ts",
    "local/src/renderer/**/*",
    "packages/shared/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "module": "es2022",
    "moduleResolution": "bundler",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"],
      "@shared/*": ["packages/shared/*"],
      "@types": ["src/renderer/src/types/index.ts"]
    }
  }
}
